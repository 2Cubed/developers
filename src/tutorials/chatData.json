{
  "methods": {
    "auth": {
      "description": "Authenticate to join as an active user in a specified channel",
      "example": {
        "request": {
          "type": "method",
          "method": "auth",
          "arguments": [
            "CHANNELID",
            "USERID",
            "32hexadedimalAuthKey"
          ],
          "id": 0
        },
        "response": {
          "type": "reply",
          "error": null,
          "id": 1,
          "data": {
            "authenticated": true,
            "role": "Owner"
          }
        }
      }
    },
    "msg": {
      "description": "Send a chat message to the server, the server will not directly reply unless an error occurred. For confirmation use the events.",
      "example": {
        "request": {
          "type": "method",
          "method": "msg",
          "arguments": [
            "Hello World!"
          ],
          "id": 2
        }
      }
    },
    "vote": {
      "description": "Casts a vote for the current poll, `arguments` is the vote option index.",
      "example": {
        "request": {
          "type": "method",
          "method": "vote",
          "arguments": [
            0
          ],
          "id": 3
        },
        "response": {
          "type": "reply",
          "error": null,
          "id": 3,
          "data": true
        }
      }
    }
  },
  "events": {
    "ChatMessage": {
      "description": "Send by the server when a any client send a message. Can contain multiple message parts.",
      "example": {
        "channel": 12345,
        "id": "cfa8a5b0-2ec5-11e6-1234-f3d652ffec28",
        "user_name": "USERNAME",
        "user_id": 12345,
        "user_roles": [
          "User"
        ],
        "message": {
          "message": [
            {
              "type": "text",
              "data": "Hello!"
            },
            {
              "type": "emoticon",
              "text": ":)",
              "path": "default/1F604"
            },
            {
              "type": "link",
              "url": "http://beam.pro/awesome_channel",
              "text": "Check out my channel, yo!"
            }
          ],
          "meta": {}
        }
      }
    },
    "UserJoin": {
      "description": "Send when a user left the chat.",
      "example": {
        "username": "USERNAME",
        "roles": [
          "User"
        ],
        "id": 12345
      }
    },
    "UserLeave": {
      "description": "Send when a user left the chat.",
      "example": {
        "username": "USERNAME",
        "roles": [
          "User"
        ],
        "id": 12345
      }
    },
    "PollStart": {
      "description": "Send when a new poll is started.",
      "example": {
        "q": "How's the weather?",
        "answers": [
          "Good.",
          "Bad."
        ],
        "author": {
          "user_name": "USERNAME",
          "user_id": 12345,
          "user_roles": [
            "Mod"
          ]
        },
        "duration": 29996,
        "endsAt": 1465533783407,
        "voters": 0,
        "responses": {
          "Good.": 0,
          "Bad.": 0
        }
      }
    },
    "PollEnd": {
      "description": "Send when a poll ended",
      "example": {
        "q": "How's the weather?",
        "answers": [
          "Good.",
          "Bad."
        ],
        "author": {
          "user_name": "USERNAME",
          "user_id": 12345,
          "user_roles": [
            "Mod"
          ]
        },
        "duration": 29996,
        "endsAt": 1465533783407,
        "voters": 5,
        "responses": {
          "Good.": 2,
          "Bad.": 3
        }
      }
    }
  }
}
